{% extends 'form.html.twig' %}

{% set pageTitle =  'Inscription' %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    {{ encore_entry_link_tags('registerPage') }}
{% endblock %}

{% block formTitle %}
    {{ pageTitle }}
{% endblock %}

{% block form %}

    {{ form_start(registrationForm) }}

            <div class="custom_error">
                {{ customError|default('') }}
            </div>

            {{ form_row(registrationForm.username) }}

            {{ form_row(registrationForm.plainPassword) }}

            {{ form_row(registrationForm.email) }}

            {{ form_row(registrationForm.birthDate) }}

            <button class="w3-button w3-green">S'inscrire</button>

            <a class="w3-button w3-red form-cancel-btn" href="{{ path('default') }}">Retour Ã  l'accueil</a>

    {{ form_end(registrationForm) }}



{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
    <script src="https://unpkg.com/gijgo@1.9.11/js/messages/messages.fr-fr.js" type="text/javascript"></script>

    <script>
        $(document).ready(function() {
            $('.js-datepicker')
            .datepicker({
                locale: 'fr-fr',
                showOtherMonths: true,
                format: 'dd/mm/yyyy',
            })
        });
    </script>

    {{ encore_entry_script_tags('registerPage') }}
{% endblock %}