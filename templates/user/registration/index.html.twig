{% extends 'form.html.twig' %}

{% set pageTitle =  'Inscription' %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('registerPage') }}
{% endblock %}

{% block formTitle %}
    {{ pageTitle }}
{% endblock %}

{% block form %}

    {{ form_start(registrationForm) }}
            <div id="registerFormContainer">

                <div class="custom_error">
