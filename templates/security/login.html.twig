{% extends 'form.html.twig' %}

{% set pageTitle =  'Connexion' %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('loginPage') }}
{% endblock %}

{% block formTitle %}
    {{ pageTitle }}
{% endblock %}

{% block form %}

    <form method="post">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label for="inputUsername" class="sr-only">Nom d'utilisateur</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
        <label for="inputPassword" class="sr-only">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

        <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>

        <a class="w3-button btn w3-blue form-cancel-btn" href="{{ path('app_register') }}">S'inscrire</a>

        <a class="w3-button btn w3-red form-cancel-btn" href="{{ path('default') }}">Retour Ã  l'accueil</a>

    </form>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('loginPage') }}
{% endblock %}